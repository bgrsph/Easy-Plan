<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".LoginActivity"
    android:weightSum="100"
    android:orientation="vertical">
<!-- android:background="@drawable/banner2" -->
    <LinearLayout
        android:id="@+id/welcomeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:src="@drawable/logo1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"></LinearLayout>

    <LinearLayout
        android:id="@+id/welcomeLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/logEmail"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="5dp"
            android:background="@drawable/text_style"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:shadowColor="#F5F0F0"
            android:textSize="14dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcomeLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7">
        <EditText
            android:id="@+id/logPassword"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:shadowColor="#F5F0F0"
            android:textSize="14dp"
            android:textStyle="italic"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcomeLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="15">

        <Button
            android:id="@+id/logButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_main"
            android:layout_gravity="center"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/textColorAlmostWhite"
            android:fontFamily="sans-serif-smallcaps"
            android:stateListAnimator="@null"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/loginGoogle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="6">

            <Switch
                android:id="@+id/loginRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="sans-serif-light"
                android:text="Remember Me  "
                android:layout_gravity="center"
                android:textColorHighlight="#00B40000"
                android:textColorLink="#C8F9FBFF"
                android:textSize="14dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:id="@+id/forgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="I forgot my password!"
            android:clickable="true"
            android:textSize="15dp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:text="@string/wanttoregister"
            android:textColor="@color/black"
            android:textColorHighlight="#00B40000"
            android:textColorLink="#C8F9FBFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/logSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:onClick="goToSignUp"
            android:text="@string/signup"
            android:textColor="@color/button_red"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>

