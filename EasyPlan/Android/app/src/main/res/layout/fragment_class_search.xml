<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassSearchFragment"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="10"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Fill in at least one of the fields below to search for courses."
            android:paddingLeft="5dp"
            android:id="@+id/text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcomeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        >
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"
            android:paddingLeft="5dp"
            android:id="@+id/facultyCode"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:hint="Faculty"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        >
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"
            android:paddingLeft="5dp"
            android:id="@+id/courseCode"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:hint="Course Code"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        >
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"
            android:paddingLeft="5dp"
            android:id="@+id/timeslot"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:hint="Timeslot"
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcomeLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="15">
        <Button
            android:id="@+id/searchButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_welcome"
            android:layout_gravity="center"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/textColorAlmostWhite"
            android:fontFamily="sans-serif-smallcaps"
            android:stateListAnimator="@null"
            android:text="Search Courses"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>