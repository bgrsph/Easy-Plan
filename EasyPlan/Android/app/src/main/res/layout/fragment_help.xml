<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="10"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Do you have a problem or have recommendations? You can contact us or the KUSIS officials from below."
            android:paddingLeft="5dp"
            android:id="@+id/text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:shadowColor="#F5F0F0"
            android:textColor="#000000"
            android:textSize="15dp"
             />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcomeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="3"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="E-Mail us: "
            android:paddingLeft="5dp"
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:shadowColor="#F5F0F0"
            android:textColor="#000000"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="30"
        >
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"
            android:paddingLeft="5dp"
            android:id="@+id/courseCode"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="top"
            android:hint="Write your message here."
            android:shadowColor="#F5F0F0"
            android:textColor="#CFCFCF"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/welcomeLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="15">
        <Button
            android:id="@+id/searchButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_welcome"
            android:layout_gravity="center"
            android:clickable="true"
            android:enabled="true"
            android:textColor="@color/textColorAlmostWhite"
            android:fontFamily="sans-serif-smallcaps"
            android:stateListAnimator="@null"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/text_style"
            android:paddingLeft="5dp"
            android:id="@+id/kusis"
            android:text="Click here to be redirected to KUSIS call center."
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:shadowColor="#F5F0F0"
            android:onClick="callKUSIS"
            android:textColor="#000000"
            android:textSize="15dp"
             />
    </LinearLayout>


</LinearLayout>